<%= link_to 'New kitten', new_kitten_path %>

<% if @kittens %>
  <ul>
    <% @kittens.each do |kitten| %>
      <li><%= link_to kitten.name, kitten_path(kitten) %> (<%= link_to 'Delete', kitten_path(kitten), method: :delete %>)
      <%= render 'display_kitten', kitten: kitten %>
      </li>
    <% end %> 
  </ul>
<% end %>
